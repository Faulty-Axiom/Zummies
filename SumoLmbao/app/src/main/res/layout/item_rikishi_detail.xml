                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:background="@color/table_row_odd"/>

                    <TextView
                        android:id="@+id/sandanmeLossesTextView"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:background="@color/table_row_even"/>

                    <TextView
                        android:id="@+id/jonidanLossesTextView"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:background="@color/table_row_odd"/>

                    <TextView
                        android:id="@+id/jonokuchiLossesTextView"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:background="@color/table_row_even"/>

                </LinearLayout>

                <!-- Total Column -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:background="@color/table_header"/>

                    <!-- Career total count -->
                    <TextView
                        android:id="@+id/careerTotalTextView"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:background="@color/table_row_even"/>

                    <!-- Division total counts -->
                    <TextView
                        android:id="@+id/makuuchiTotalTextView"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:background="@color/table_row_odd"/>

                    <TextView
                        android:id="@+id/juryoTotalTextView"
                        android:layout_width="40dp"
