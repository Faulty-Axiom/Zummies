                        android:background="@color/table_row_odd"/>

                    <TextView
                        android:id="@+id/sandanmeTotalTextView"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
