<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center"
    android:weightSum="2">

    <!-- East Container -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/button_background_rounded"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:id="@+id/eastContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/eastShikona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eastRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/eastRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/eastPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="52sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/technique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:visibility="gone"/>

    <!-- West Container -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button_background_rounded"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:id="@+id/westContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/westShikona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/westRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/westRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/westPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="52sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>